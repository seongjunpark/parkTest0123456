<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/navi_top"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/topbg" >

            <ImageView
                android:id="@+id/logomenu"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Wassup" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_title_layout"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_one"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:text="what&apos;s up" />

            <Button
                android:id="@+id/btn_two"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:text="note" />

            <Button
                android:id="@+id/btn_three"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:text="party" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/ll_title_layout" >
        </android.support.v4.view.ViewPager>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/slidingPage01"
        android:layout_width="180dp"
        android:layout_height="370dp"
        android:layout_gravity="left"
        android:layout_marginTop="40dp"
        android:background="#F0F0F0"
        android:orientation="vertical"
        android:visibility="gone" >

        <EditText
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:gravity="fill_horizontal"
            android:hint="Search ..."
            android:padding="7dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingTop="12dp"
            android:text="카카오톡 친구 초대"
            android:textColor="#676867"
            android:textSize="16sp" />

        <!-- 라인 -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#CECECE"
            android:text="" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#FFFFFF"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="파티요청"
            android:textColor="#676867"
            android:textSize="16sp" />

        <!-- 라인 -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#CECECE"
            android:text="" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#FFFFFF"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="친구요청"
            android:textColor="#676867"
            android:textSize="16sp" />

        <!-- 라인 -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#CECECE"
            android:text="" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#FFFFFF"
            android:text="" />

        <Button
            android:id="@+id/btn_friendlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="친구목록"
            android:textColor="#676867"
            android:textSize="16sp" />

        <!-- 라인 -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#CECECE"
            android:text="" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#FFFFFF"
            android:text="" />

        <Button
            android:id="@+id/btn_partylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPartylistClick"
            android:padding="6dp"
            android:text="파티목록"
            android:textColor="#676867"
            android:textSize="16sp" />

        <!-- 라인 -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#CECECE"
            android:text="" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#FFFFFF"
            android:text="" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="계정관리"
            android:textColor="#676867"
            android:textSize="16sp" />

        <!-- 라인 -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#CECECE"
            android:text="" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#FFFFFF"
            android:text="" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:background="#00000000"
            android:padding="6dp"
            android:text="로그아웃"
            android:textColor="#676867"
            android:textSize="16sp" />
    </LinearLayout>

</FrameLayout>